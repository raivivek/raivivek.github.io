!!! XML

%rss{version:"2.0", 'xmlns:atom':"http://www.w3.org/2005/Atom"}
  %channel
    %title Shorts
    %description Vivek Rai's Blog
    %link https://raivivek.in
    %atom:link{href:"https://raivivek.in/rss.xml", rel:"self", type:"application/rss+xml"}/

    - for subpage in page.subpages:
      - if not (subpage.type == 404 or subpage.draft):
        %item
          %title {{subpage.title}}
          %link {{site.url}}/{{subpage.url}}
          %description {{subpage.excerpt}}
          %pubDate {{subpage.date.strftime("%d %b %Y")}}
