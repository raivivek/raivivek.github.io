%head
  %link{href:'styles.css', rel:'stylesheet'}
  %link{href:'http://fonts.googleapis.com/css?family=Open+Sans:300italic,300,400',
  rel:'stylesheet'}
%body
  .container
    #banner
      .banner-title
        %a{href:".."} Shorts
      .banner-subclause
        Musings of a free mind, treasured recollections & visions of a distant future
      .divider
      .archive
        .category
          archives:
          %a{href:"./places"} places,
          %a{href:"./books"} books,
          %a{href:"./science"} science,
          %a{href:"./programming"} programming,
          %a{href:"./unfinished"} unfinished
      .divider
    .content
      #article
        .metadata
          .category
            {{ page.category }}
        .title
          {{ page.title }}
        .subtitle
          {{ page.subtitle }}
        {{ page.content }}
        %ul
          - for subpage in page.subpages:
            %li
              .list
                %a{href:"{{ page.rel_site_url }}/{{ subpage.url }}"}
                  {{ subpage.title }}
              %i {{ subpage.excerpt }}
              %br
            .nav
                - if subpage['category']:
                  category: {{ subpage.category }}
                  %br
                date: {{ subpage.date.strftime("%d %b %Y") }}
              %br
              %br
