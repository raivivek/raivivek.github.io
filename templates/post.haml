%head
  %meta{charset:'utf-8'}
  %meta{name:'viewport', content:'width=device-width, initial-scale=1'}
  %link{href:'/css/normalize.css', rel:'stylesheet'}
  %link{href:'/css/styles.css', rel:'stylesheet'}
  %title {{ page.title }} | Shorts by Vivek Rai
%body
  .container
    .banner.no-print
      .banner-title
        %a{href:"{{ site.url }}"} Shorts
      .banner-subclause
        Musings of a free mind, treasured recollections <br> &amp; <br> visions of a distant future
      -#.divider
      .archive
        %a{href:"{{ page.rel_site_url }}/places.html"} places,
        %a{href:"{{ page.rel_site_url }}/books.html"} books,
        %a{href:"{{ page.rel_site_url }}/science.html"} science,
        %a{href:"{{ page.rel_site_url }}/programming.html"} programming,
        <br>
        %a{href:"{{ page.rel_site_url }}/notes.html"} notes,
        %a{href:"{{ page.rel_site_url }}/unfinished.html"} unfinished,
        %a{href:"{{ page.rel_site_url }}/about.html"} about
      -#.divider
    .content
      %article
        .metadata
          .category
            %a{href:"{{ page.rel_site_url }}/{{ page.category }}.html"}
              {{ page.category }}
          .timestamp
            {{ page.date.strftime ("%d %b %Y")}}
        .title
          %a{href:"{{page.rel_site_url}}/{{page.url}}#main"}
            {{ page.title }}
        .post
          {{ page.content }}
        .article-end
          - if page.author:
            Published by {{ page.author }}
        .share
          %a{href:"https://twitter.com/share",class:"twitter-share-button",
          data-text:"{{page.title.title()}}: Shorts by Vivek Rai", data-via:"vivek_ziel",
          data-hashtags:"{{page.category}}",data-dnt:"true"} tweet |&nbsp;
          %a{href:"https://twitter.com/vivek_ziel",class:"twitter-follow-button",
          data-show-count:"false",data-show-screen-name:"false",data-dnt:"true"} follow @vivek_ziel

  - if page.math
    %script{src:"//cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-MML-AM_CHTML"}
  %script
    !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');
